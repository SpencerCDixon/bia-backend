{
  "name": "bia-backend",
  "version": "0.0.1",
  "description": "Backend API for personal productivity CLI bia",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && babel src -d dist",
    "start": "nodemon src/index.js --exec babel-node",
    "production": "node dist/index.js",
    "dev": "nf start -w --procfile Procfile.dev",
    "db": "mongod --dbpath=./data --port 27017",
    "test": "mocha --compilers js:babel-register --require ./tests/test-bundle.js --recursive ./tests/**/*.js --full-trace"
  },
  "author": "Spencer Dixon",
  "license": "MIT",
  "engines": {
    "node": "5.7.0",
    "npm": "3.6.0"
  },
  "dependencies": {
    "co-body": "^4.0.0",
    "co-monk": "^1.0.0",
    "koa": "^1.2.0",
    "koa-basic-auth": "^1.1.2",
    "koa-body": "^1.4.0",
    "koa-logger": "^1.3.0",
    "koa-router": "^5.4.0",
    "koa-validate": "^0.2.11",
    "mongodb": "^1.4.40",
    "mongoskin": "^1.3.20",
    "monk": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "foreman": "^1.4.1",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.3"
  }
}
